---
import type { HTMLTag, Polymorphic } from 'astro/types';

type TagType = 'a' | 'button';

type Props<Tag extends HTMLTag> = {
  children: any;
} & Polymorphic<{ as: Tag & TagType }>;

const { as: Tag, ...props } = Astro.props;
---

<Tag
  class="flex cursor-pointer hover:text-neutral-900 hover:underline focus:text-neutral-900 focus:underline hover:dark:text-neutral-300 focus:dark:text-neutral-300 dark:focus-visible:outline-none"
  {...props}
>
  <slot />
</Tag>
