---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  children: any;
}

const { ...attrs } = Astro.props;
---

<a
  class="hover:decoration-primary focus:decoration-primary inline-block text-neutral-900 underline decoration-neutral-400 underline-offset-2 focus-visible:outline-none dark:text-neutral-300 dark:decoration-neutral-600"
  {...attrs}
>
  <slot />
</a>
