---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  children: any;
}

const { ...attrs } = Astro.props;
---

<a
  class="inline-block text-neutral-900 underline decoration-neutral-400 underline-offset-2 hover:decoration-primary focus-visible:decoration-primary focus-visible:outline-primary dark:text-neutral-300 dark:decoration-neutral-600"
  {...attrs}
>
  <slot />
</a>
