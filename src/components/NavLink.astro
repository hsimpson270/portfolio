---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  children: any;
}

const { ...attrs } = Astro.props;
---

<a
  class="hover:text-primary focus:text-primary h-6 cursor-pointer rounded px-1 hover:bg-neutral-300 focus:bg-neutral-300 focus-visible:outline-none dark:hover:bg-neutral-700 dark:focus:bg-neutral-700"
  {...attrs}
>
  <slot />
</a>
