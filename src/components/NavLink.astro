---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  children: any;
}

const { ...attrs } = Astro.props;
---

<a
  class="hover:text-primary focus:text-primary cursor-pointer rounded px-1 hover:bg-neutral-200 focus:bg-neutral-200 focus-visible:outline-none dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
  {...attrs}
>
  <slot />
</a>
