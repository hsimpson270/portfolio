---
import ChevronRightIcon from '@/icons/chevron-right.svg';
import type { CollectionEntry } from 'astro:content';
import BlogInfo from './BlogInfo.astro';

type Props = {
  post: CollectionEntry<'blog'>;
  showYear: boolean;
};

const { post, showYear } = Astro.props;
---

<a
  href=`/blog/${post.id}`
  class="group mt-4 flex items-center rounded border border-neutral-400 bg-neutral-50 p-2 hover:border-primary hover:bg-neutral-100 focus:border-primary focus:bg-neutral-100 focus-visible:outline-none dark:border-neutral-600 dark:bg-neutral-950 dark:hover:bg-neutral-900 dark:focus:bg-neutral-900"
>
  <div class="flex-1">
    <div class="font-bold">{post.data.title}</div>
    <div class="text-sm">
      <BlogInfo post={post} showYear={showYear} />
    </div>
  </div>
  <ChevronRightIcon
    class="text-2xl group-hover:text-primary group-focus:text-primary"
  />
</a>
