---
import BackToTop from '@components/BackToTop.astro';
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import '../styles/global.css';

interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head description={description} title={title} />
  <body
    class="mx-auto max-w-screen-md bg-neutral-100 px-3 text-base text-neutral-700 antialiased md:px-0 dark:bg-neutral-950 dark:text-neutral-400"
  >
    <div
      class="bg-size-24 mask-image absolute top-0 left-0 -z-1 h-full w-full bg-radial from-neutral-400 from-[1px] to-transparent to-[1px] dark:from-neutral-700"
    >
    </div>
    <Header />
    <main class="motion-safe:animate-fade-in-up mt-4">
      <slot />
      <BackToTop />
    </main>
    <Footer />
  </body>
</html>
