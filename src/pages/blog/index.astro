---
import BlogCard from '@components/blog/BlogCard.astro';
import IconButton from '@components/IconButton.astro';
import type { HeadProps } from '@interfaces/head-props';
import Layout from '@layouts/Layout.astro';
import { getBlogPostsAsync } from '@utils/getBlogPosts';
import { Icon } from 'astro-icon/components';
import type { CollectionEntry } from 'astro:content';

const data = await getBlogPostsAsync();

const posts = data.reduce<Record<string, CollectionEntry<'blog'>[]>>(
  (acc, post) => {
    const year = post.data.date.getFullYear().toString();
    (acc[year] ??= []).push(post);

    return acc;
  },
  {},
);

const years = Object.keys(posts);

const props: HeadProps = {
  description: 'A collection of my ramblings.',
  ogTitle: 'Check out my blog!',
  tabTitle: 'Blog',
};
---

<Layout {...props}>
  <div class="flex items-center justify-between">
    <h1>Blog</h1>
    <div class="text-2xl/6">
      <IconButton as="a" href="/rss.xml" aria-label="Subscribe to my blog">
        <Icon name="rss" />
      </IconButton>
    </div>
  </div>
  <p>Welcome to my blog!</p>
  <p>
    I created this page to document the interesting challenges I encounter in my
    development career. Each post is both a reference for myself (so I can
    remember what I've learned just in case I ever need it again) and a resource
    for others who maybe, just maybe, might be looking for the same solution. ðŸ™‚
  </p>

  {
    years.map((year) => (
      <section class="mt-8">
        <h2>{year}</h2>
        <ul>
          {posts[year].map((post) => (
            <li>
              <BlogCard post={post} showYear={false} />
            </li>
          ))}
        </ul>
      </section>
    ))
  }
</Layout>
