---
import BlogCard from '@components/blog/BlogCard.astro';
import Link from '@components/Link.astro';
import type { HeadProps } from '@interfaces/head-props';
import Layout from '@layouts/Layout.astro';
import { getBlogPostsAsync } from '@utils/getBlogPosts';

const latestPost = (await getBlogPostsAsync())[0];

const props: HeadProps = {
  description:
    'My minimalist personal website built with efficiency and accessibility in mind.',
  tabTitle: 'Home',
};
---

<Layout {...props}>
  <section>
    <h1>
      Hi, I'm Hunter
      <span class="inline-block origin-[70%_70%] motion-safe:animate-wave">
        üëãüèª
      </span>
    </h1>
    <p>
      I'm a senior software engineer with nearly 8 years of experience in
      front-end web development. I'm currently living in Huntsville, AL and
      working at
      <Link href="https://www.ncontracts.com/" target="_blank" rel="noopener">
        Ncontracts
      </Link>, where I am designing and building scalable front-end
      architectures for their SaaS platforms.
    </p>
    <p>
      Proficient in modern frameworks like
      <Link href="https://angular.dev/" target="_blank" rel="noopener">
        Angular
      </Link>,
      <Link href="https://react.dev/" target="_blank" rel="noopener">
        React
      </Link>, and now
      <Link href="https://astro.build/" target="_blank" rel="noopener">
        Astro
      </Link>, I've led teams in creating internal component libraries,
      enhancing accessibility, and driving product-wide improvements for
      platforms servicing thousands of clients and generating over $100M in
      annual revenue.
    </p>
    <p>
      In my free time, I enjoy hanging out with my wife and our two cats,
      playing board games with friends, trying new local restaurants, and
      <Link href="/tv-rankings">binge-watching tv shows</Link>.
    </p>
  </section>

  <section class="mt-8">
    <div class="flex items-baseline justify-between">
      <h2>Latest Post</h2>
      <span class="text-sm">
        <Link href="/blog">All Posts</Link>
      </span>
    </div>
    <BlogCard post={latestPost} showYear={true} />
  </section>

  <section class="mt-8">
    <h2>Let's Connect</h2>
    <p>
      If you would like to get in touch with me, please feel free to reach me on
      <Link
        href="https://www.linkedin.com/in/hsimpson270/"
        target="_blank"
        rel="noopener"
      >
        LinkedIn
      </Link>, check out my
      <Link
        href="https://github.com/hsimpson270"
        target="_blank"
        rel="noopener"
      >
        GitHub
      </Link>, or
      <Link href="mailto:hi@hunter-simpson.dev">send me an email</Link>.
    </p>
  </section>
</Layout>
