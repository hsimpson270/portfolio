<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uneven Grid Rows</title>
    <style>
      .container {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Two equal width columns */
        gap: 20px; /* Space between grid items */
        position: relative;
      }

      .item {
        padding: 20px;
        background-color: lightcoral;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-weight: bold;
      }

      .item:nth-child(odd) {
        background-color: lightseagreen;
      }

      .item:nth-child(even) {
        background-color: lightblue;
      }

      /* Set specific heights for the items in columns */
      .item:nth-child(1) {
        height: 200px;
      }
      .item:nth-child(2) {
        height: 400px;
      }
      .item:nth-child(3) {
        height: 300px;
      }
      .item:nth-child(4) {
        height: 250px;
      }
      .item:nth-child(5) {
        height: 150px;
      }
      .item:nth-child(6) {
        height: 350px;
      }

      /* Position items manually so each row in column 1 stays below the previous one */
      .item:nth-child(1) {
        grid-column: 1;
        grid-row: 1;
      }
      .item:nth-child(2) {
        grid-column: 2;
        grid-row: 1;
      }
      .item:nth-child(3) {
        grid-column: 1;
        grid-row: 2;
      }
      .item:nth-child(4) {
        grid-column: 2;
        grid-row: 2;
      }
      .item:nth-child(5) {
        grid-column: 1;
        grid-row: 3;
      }
      .item:nth-child(6) {
        grid-column: 2;
        grid-row: 3;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="item">Column 1, Row 1 (200px)</div>
      <div class="item">Column 2, Row 1 (400px)</div>
      <div class="item">Column 1, Row 2 (300px)</div>
      <div class="item">Column 2, Row 2 (250px)</div>
      <div class="item">Column 1, Row 3 (150px)</div>
      <div class="item">Column 2, Row 3 (350px)</div>
    </div>
  </body>
</html>
